using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
namespace _02.Average_Student_Grades
{
    class Program
    {
        static void Main(string[] args)
        {
            int n = int.Parse(Console.ReadLine());

            Dictionary<string, List<decimal>> grades = new Dictionary<string, List<decimal>>();

            for (int i = 0; i < n; i++)
            {
                string[] tokens = Console.ReadLine()
                    .Split();

                if (grades.ContainsKey(tokens[0]))
                {
                    grades[tokens[0]].Add(decimal.Parse(tokens[1]));
                }
                else
                {
                    grades.Add(tokens[0], new List<decimal> () { decimal.Parse(tokens[1])}); 
                }
            }
            foreach (var goodJob in grades)
            {
                Console.WriteLine($"{goodJob.Key} -> {string.Join(" ",goodJob.Value.Select(s =>s.ToString("F2")))} (avg: {goodJob.Value.Average():f2})");
            }
        }
    }
}
