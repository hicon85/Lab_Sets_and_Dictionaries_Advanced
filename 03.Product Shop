using System;
using System.Collections.Generic;
using System.Linq;

namespace _03.Product_Shop
{
    class Program
    {
        static void Main(string[] args)
        {
            string command = Console.ReadLine();

            SortedDictionary<string, Dictionary<string, double>> shops = new SortedDictionary<string, Dictionary<string, double>>();

            while (command?.ToUpper() != "REVISION")
            {
                string[] tokens = command.Split(", ");

                if(shops.ContainsKey(tokens[0]) == false)
                {
                    shops[tokens[0]] = new Dictionary<string, double>();
                }

                shops[tokens[0]].Add(tokens[1], double.Parse(tokens[2]));

                command = Console.ReadLine();
            }

            foreach (var goodJob in shops)
            {
                Console.WriteLine($"{goodJob.Key}->");

                foreach (var products in goodJob.Value)
                {
                    Console.WriteLine($"Product: {products.Key}, Price: {products.Value}");
                }
            }

           
        }
    }
}
